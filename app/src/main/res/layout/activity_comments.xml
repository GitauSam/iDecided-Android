<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.phosphor.idecided.Comments">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/ProgressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flagbackground6"
            android:id="@+id/header_cover_image"
            android:contentDescription="@string/app_name"/>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/user_profile_photo"
            android:layout_below="@+id/header_cover_image"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-140dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile_firstname"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/user_profile_photo"
            android:layout_toRightOf="@+id/user_profile_photo"
            android:text="@string/firstname"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile_secondname"
            android:layout_marginTop="40dp"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toEndOf="@+id/user_profile_firstname"
            android:layout_toRightOf="@+id/user_profile_firstname"
            android:text="@string/secondname"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile_surname"
            android:layout_below="@+id/user_profile_firstname"
            android:layout_toEndOf="@+id/user_profile_photo"
            android:layout_toRightOf="@+id/user_profile_photo"
            android:text="@string/surname"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_profile_post"
            android:layout_below="@id/user_profile_surname"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:text="@string/post"
            android:textColor="#fff"
            android:textSize="18sp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"
            android:id="@+id/profile_layout"
            android:layout_below="@+id/header_cover_image">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rellayouteditTextview"
                android:layout_margin="2dp"
                android:background="@drawable/customrellayoutborder">
                <EditText
                    android:layout_width="215dp"
                    android:layout_height="match_parent"
                    android:id="@+id/editTextenterComment"
                    android:layout_margin="5dp"
                    android:focusable="true"
                    android:background="@drawable/customrellayoutborder"
                    android:inputType="textMultiLine|textCapSentences|textAutoCorrect|textAutoComplete"
                    android:scrollbars="vertical"
                    android:gravity="top|start"
                    android:hint="@string/entercomment"
                    android:singleLine="false"
                    />
            </RelativeLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnEnterComment"
                android:layout_toRightOf="@+id/rellayouteditTextview"
                android:layout_toEndOf="@+id/rellayouteditTextview"
                android:text="@string/btnenter"
                />
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayoutlistview"
        android:layout_marginTop="5dp"
        android:background="@drawable/customrellayoutborder">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listViewComments">
        </ListView>
    </LinearLayout>

</LinearLayout>
