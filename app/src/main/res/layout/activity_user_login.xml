<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lazysunnairobi"
    tools:context="com.example.phosphor.idecided.userLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayoutSignIn"
        android:layout_centerVertical="true">

        <EditText
            android:layout_width="@dimen/userNameEditTextUsernamePass"
            android:layout_height="wrap_content"
            android:id="@+id/editTextEmail"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:hint="@string/email"
            android:drawableStart="@drawable/ic_action_name"
            android:drawableLeft="@drawable/ic_action_name"
            android:background="#11000000"
            android:layout_margin="@dimen/editTextMargin"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="@dimen/userNameEditTextUsernamePass"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/editTextUserpass"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_action_pass"
            android:drawableLeft="@drawable/ic_action_pass"
            android:hint="@string/enterpass"
            android:background="#11000000"
            android:layout_margin="@dimen/editTextMargin"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="@dimen/userNameEditTextUsernamePass"
            android:layout_height="@dimen/cardViewHeight"
            android:background="@drawable/linearlayoutaccess"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/linearLayoutLogin"
            android:layout_margin="@dimen/cardViewMargin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/editTextMargin"
                android:textSize="20sp"
                android:id="@+id/txtLogin"
                android:text="@string/signin"
                android:textColor="#424242"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSignup"
        android:text="@string/notregistered"
        android:layout_below="@+id/linearLayoutSignIn"
        android:textSize="20sp"
        android:textColor="#F0F4C3"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
